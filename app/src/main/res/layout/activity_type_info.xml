<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="de.limbusdev.gotoolset.TypeInfoActivity"
    android:padding="0dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:id="@+id/imgTypeInfoIcon"
            android:src="@drawable/type_fire"
            android:adjustViewBounds="true"
            android:background="#cc0000"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:textAppearance="@style/HelpItemPaddingVerticalHeading"
            android:text="Fire"
            android:id="@+id/textViewTypeInfoTitle"
            android:background="#cc0000"
            android:textColor="#ffffff"
            android:textAlignment="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/textView13"
            android:layout_alignParentStart="false"
            android:layout_alignParentTop="false"
            android:layout_weight="1"
            android:padding="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/info_about"
            android:id="@+id/textView14"
            android:padding="8dp"/>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/pokeListView"
            android:layout_below="@+id/textView13"
            android:layout_weight="2"/>

    </LinearLayout>

</RelativeLayout>
